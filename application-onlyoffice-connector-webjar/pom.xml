<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.xwiki.onlyoffice-connector</groupId>
    <artifactId>application-onlyoffice-connector</artifactId>
    <version>2.0-SNAPSHOT</version>
  </parent>
  <artifactId>application-onlyoffice-connector-webjar</artifactId>
  <packaging>webjar</packaging>
  <name>OnlyOffice Connector - WebJar</name>
  <description>Client-side resources needed by the OnlyOffice connector.</description>
  <properties>
    <!-- Name to display by the Extension Manager -->
    <xwiki.extension.name>OnlyOffice Connector WebJar</xwiki.extension.name>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>requirejs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>jquery</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>com.github.searls</groupId>
        <artifactId>jasmine-maven-plugin</artifactId>
        <!-- Skip the execution of the Jasmine tests for now because:
          * we don't have any tests yet
          * PhantomJS doesn't run on our build agent (CI) and we don't have Chrome headless installed either. We need to
            see how to run these tests inside a Docker container. -->
        <configuration>
          <skipJasmineTests>true</skipJasmineTests>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.xwiki.contrib</groupId>
        <artifactId>jshint-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>lint</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <excludes>
            <!-- TODO: Remove them from the webjar. -->
            <!-- Exclude third party JS files. -->
            <exclude>src/main/webjar/es6-promise.min.js</exclude>
            <exclude>src/main/webjar/reconnecting-websocket.js</exclude>
            <exclude>src/main/webjar/netflux-client.js</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <configuration>
          <excludes>
            <!-- Exclude JS files that not under an XWiki license, so that we don't check the license for them -->
            <exclude>src/main/webjar/es6-promise.min.js</exclude>
            <exclude>src/main/webjar/netflux-client.js</exclude>
            <exclude>src/main/webjar/reconnecting-websocket.js</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
